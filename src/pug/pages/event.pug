extends ../base/_base.pug

block append variables
  - var pageTitle = "節慶活動"

block append css
  //- link(href="../css/scene.css", rel="stylesheet")

block append js
  script(src="../js/index.js" type="text/javascript")
  //- script(src="" type="text/javascript")

block content
  .content.searchPage
    ul.breadcrumbs
      li: a(href='./') 首頁
      li 節慶活動
    .searchWrapper
      .selectBox#searchDropdown_city
        ul.default
          li.item
            .text 全部縣市
            i.fas.fa-chevron-down
        ul.options
          li.item
            .text 全部縣市
          li.item
            .text 台北市
          li.item
            .text 台北縣
          li.item
            .text 桃園市
      .selectBox#searchDropdown_topic
        ul.default
          li.item
            .text 全部主題
            i.fas.fa-chevron-down
        ul.options
          li.item
            .text 全部主題
          li.item
            .text 自然風景類
          li.item
            .text 觀光工廠類
          li.item
            .text 遊憩類
      input.searchInput(
        type='text'
        placeholder='你想去哪裡？ 請輸入關鍵字'
      )
      button.searchButton
        .icon
        .text 搜　尋
    .activity_container
      .topWrapper
        .title 熱門主題
      .card_imgWrapper
        .card_img
          img(src='../images/Theme-bg2-1.png')
          .title 節慶活動
        .card_img
          img(src='../images/Theme-bg2-2.png')
          .title 自行車活動
        .card_img
          img(src='../images/Theme-bg2-3.png') 
          .title 遊憩活動
        .card_img
          img(src='../images/Theme-bg2-4.png')
          .title 產業文化活動
        .card_img
          img(src='../images/Theme-bg2-5.png')
          .title 年度活動
        .card_img
          img(src='../images/Theme-bg2-6.png')
          .title 四季活動
