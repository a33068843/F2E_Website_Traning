include _header
include _footer
block variables
	- var websiteTitle = "台灣走走 • Tai Walk"
	- var dash = ' - '
	- var pageTitle = ""

<!DOCTYPE html>
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="viewport" content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, width=device-width")
		if pageTitle 
			title #{pageTitle + dash + websiteTitle}
		else
			title #{websiteTitle}
		// 網站標題圖樣
		link(rel="shortcut icon" type="image/x-icon" href="../images/titleIcon.png")
		//- 字體的 CDN
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;300;400;500;700;900&family=Playfair+Display:wght@700&display=swap" rel="stylesheet")
		//- 引用 CSS
		link(href="../css/index.css", rel="stylesheet")
		link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css", rel="stylesheet")
		block css
	body
		+header(pageTitle)
		block content
		+footer()
		//- 引用 JS
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.4/axios.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jsSHA/3.2.0/sha.js")
		block js